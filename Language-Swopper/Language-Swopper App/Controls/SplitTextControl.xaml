<UserControl x:Class="Language_Swopper_App.SplitTextControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Language_Swopper_App"
             x:Name="perent"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <local:TextControl x:Name="Left" Grid.Column="0" Grid.ColumnSpan="2"/>
        <GridSplitter Grid.Column="2" Width="5" HorizontalAlignment="Stretch"/>
        <local:TextControl x:Name="Right" Grid.Column="3" Grid.ColumnSpan="2"/>
    </Grid>
</UserControl>
